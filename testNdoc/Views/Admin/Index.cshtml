
@using testNdoc.Models
    @model IEnumerable<Section>
    @{
        ViewData["Title"] = "Home Page";
    }
    <h2>Нормативно - правовые документы</h2>
    <p><a asp-action="Create">Добавить компонент</a></p>
    <table class="table">
        <tr><th>Главная</th></tr>
        @foreach (var item in Model)
        {
          
            <tr> <td>@item.Name</td>
            <td>
                 <a asp-action="Edit" asp-controller="Admin" asp-route-id="@item.Id">Изменить</a>
                 <a asp-action="Delete" asp-controller="Admin" asp-route-id="@item.Id">Удалить</a>
            </td></tr>
        }
    </table>



   
       








    
    










